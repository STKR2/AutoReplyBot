{
  "name": "AutoFormatterBot",
  "description": "A Telegram bot that automatically sends a separator (-) after each user message to keep group chats clean and organized.",
  "repository": "https://github.com/STKR2",
  "keywords": ["telegram", "bot", "auto-format", "group-management", "telebot"],
  "env": {
    "BOT_TOKEN": {
      "description": "Your Telegram bot token",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "basic"
    }
  }
}
